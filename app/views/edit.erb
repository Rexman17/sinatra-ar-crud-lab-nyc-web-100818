<h1>EDIT DAT POST</h1>

<form action="/posts/<%=@post.id%>" method="post">

  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>New name:<input type="text" name="name" value="<%= @post.name %>"</p>
  <p>New content:<input type="text" name="content" value="<%= @post.content %>"</p>
  <input type="submit" value="submit" id="submit">
</form>
